---
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import RecentPosts from "../../components/RecentPosts.astro";
import { getCollection } from "astro:content";

const base = import.meta.env.BASE_URL || "/";

// All blog posts (for a simple index list)
const posts = (
  await getCollection(
    "docs",
    ({ id, data }) => id.startsWith("blog/") && !(data as any)?.draft,
  )
)
  .filter((p) => (p.data as any)?.date || (p.data as any)?.updatedAt)
  .sort((a, b) => {
    const ad = new Date(
      ((a.data as any)?.date ?? (a.data as any)?.updatedAt) as string,
    ).getTime();
    const bd = new Date(
      ((b.data as any)?.date ?? (b.data as any)?.updatedAt) as string,
    ).getTime();
    return bd - ad;
  });
const hrefFor = (entry: any) =>
  `${base}${(entry as any).slug ?? (entry as any).id}/`;

const POSTS_PER_PAGE = 12;
const totalPages = Math.max(1, Math.ceil(posts.length / POSTS_PER_PAGE));

// Page 1 specific split: 1 Featured + 11 Regular = 12 total
const featuredPost = posts[0];
const pagePosts = posts.slice(1, POSTS_PER_PAGE);

const pageHref = (n: number) =>
  n === 1 ? `${base}blog/` : `${base}blog/page/${n}/`;

const frontmatter = {
  title: "블로그",
  description: "최근 글, 아카이브 · 태그 탐색",
  editUrl:
    "https://github.com/Lonpeach/astro/edit/main/src/pages/blog/index.astro",
  preferBodyH1: true,
  tableOfContents: false,
};
---

<StarlightPage frontmatter={frontmatter} hasSidebar={false}>
  <section aria-labelledby="all-posts">
    <h2 id="all-posts" class="section-title text-gradient">전체 글</h2>
    {
      posts.length === 0 ? (
        <p>게시된 글이 없습니다.</p>
      ) : (
        <>
          {/* Featured Post (Latest) */}
          {featuredPost && (
            <div class="featured-container">
              <a
                href={hrefFor(featuredPost)}
                class="glass-card-post featured-card"
              >
                <div class="card-glow-bg" />
                <div class="inner featured-inner">
                  <div class="featured-meta">
                    <span class="highlight-badge">FEATURED POST</span>
                    <time
                      datetime={new Date((featuredPost.data as any).date)
                        .toISOString()
                        .slice(0, 10)}
                      class="meta-date"
                    >
                      {new Date(
                        (featuredPost.data as any).date,
                      ).toLocaleDateString("ko-KR", { timeZone: "Asia/Seoul" })}
                    </time>
                  </div>
                  <h3 class="post-title featured-title">
                    {(featuredPost.data as any).title}
                  </h3>
                  <p class="post-desc featured-desc">
                    {(featuredPost.data as any).description}
                  </p>
                  <div class="action">
                    <span>자세히 보기</span>
                    <span class="icon">→</span>
                  </div>
                </div>
              </a>
            </div>
          )}

          <div class="post-grid">
            {pagePosts.map((post) => {
              const data: any = post.data as any;
              const href = hrefFor(post);
              const title = data?.title ?? (post as any).slug ?? post.id;
              const d = new Date(
                ((data?.date ?? data?.updatedAt) as string) ?? "",
              );
              const dateIso = isNaN(d.getTime())
                ? ""
                : d.toISOString().slice(0, 10);
              let dateKST = dateIso;
              try {
                dateKST = d.toLocaleDateString("ko-KR", {
                  timeZone: "Asia/Seoul",
                });
              } catch {}
              const desc = data?.description as string | undefined;
              const section = (post as any).id.split("/")[0];
              const sectionLabel = section.toUpperCase();

              return (
                <a href={href} class="glass-card-post">
                  <div class="card-glow-bg" />
                  <div class="inner">
                    <div class="meta">
                      <span class="meta-tag">{sectionLabel}</span>
                      {dateIso && (
                        <time datetime={dateIso} class="meta-date">
                          {dateKST}
                        </time>
                      )}
                    </div>
                    <h3 class="post-title">{title}</h3>
                    {desc && <p class="post-desc">{desc}</p>}
                    <div class="action">
                      <span>더 보기</span>
                      <span class="icon">→</span>
                    </div>
                  </div>
                </a>
              );
            })}
          </div>
          {totalPages > 1 && (
            <nav class="pager" aria-label="페이지 네비게이션">
              <a class={`pager-link prev disabled`} aria-disabled="true">
                « 이전
              </a>
              {Array.from({ length: totalPages }).map((_, i) => {
                const n = i + 1;
                const current = n === 1;
                return (
                  <a
                    class={`pager-link ${current ? "current" : ""}`}
                    href={pageHref(n)}
                    aria-current={current ? "page" : undefined}
                  >
                    {n}
                  </a>
                );
              })}
              <a class={`pager-link next`} href={pageHref(2)}>
                다음 »
              </a>
            </nav>
          )}
        </>
      )
    }
  </section>
</StarlightPage>

<style>
  .blog-header {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-bottom: 3rem;
  }
  .blog-header .page-title {
    margin: 0 !important;
  }
  .page-description {
    color: var(--sl-color-gray-3);
    font-size: 1.1rem;
    margin-top: 0.5rem;
  }
  .section-title {
    font-size: 1.75rem;
    font-weight: 800;
    margin-bottom: 2rem;
    margin-top: 0; /* Align tightly to top when header is gone */
    color: var(--sl-color-white);
  }
  .featured-container {
    margin-bottom: 2rem;
  }
  .featured-card {
    min-height: 280px;
    border-color: var(--sl-color-accent);
    background: color-mix(in srgb, var(--sl-color-bg-nav), transparent 40%);
    box-shadow: 0 0 30px
      color-mix(in srgb, var(--sl-color-accent), transparent 90%);
  }
  .featured-inner {
    padding: 3rem !important;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .featured-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }
  .highlight-badge {
    display: inline-block;
    padding: 0.3rem 0.8rem;
    background: color-mix(in srgb, var(--sl-color-accent), transparent 90%);
    color: var(--sl-color-accent);
    border: 1px solid var(--sl-color-accent);
    border-radius: 999px;
    font-size: 0.7rem;
    font-weight: 800;
    letter-spacing: 0.1em;
    text-shadow: 0 0 10px
      color-mix(in srgb, var(--sl-color-accent), transparent 60%);
  }
  .featured-title {
    font-size: 2.5rem !important;
    font-weight: 900 !important;
    margin: 0 0 1rem !important;
    line-height: 1.2 !important;
    color: var(--sl-color-white);
  }
  .featured-desc {
    font-size: 1.2rem !important;
    line-height: 1.6 !important;
    color: var(--sl-color-gray-3) !important;
    -webkit-line-clamp: 2 !important;
    line-clamp: 2 !important;
    margin-bottom: 2rem !important;
    max-width: 850px;
  }

  @media (max-width: 48rem) {
    .featured-title {
      font-size: 1.8rem !important;
    }
    .featured-inner {
      padding: 2.5rem 1.5rem !important;
    }
    .featured-desc {
      font-size: 1.05rem !important;
      -webkit-line-clamp: 3 !important;
      line-clamp: 3 !important;
    }
    .featured-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }
  }

  .pager {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    align-items: center;
    margin-top: 3rem;
    flex-wrap: wrap;
  }
  .pager-link {
    display: inline-block;
    padding: 0.5rem 1rem;
    border: 1px solid var(--sl-color-gray-6);
    border-radius: 0.75rem;
    text-decoration: none;
    color: var(--sl-color-text);
    background: color-mix(in srgb, var(--sl-color-bg-nav), transparent 80%);
    transition: all 0.2s;
  }
  .pager-link:hover,
  .pager-link:focus {
    border-color: var(--sl-color-accent);
    background: color-mix(in srgb, var(--sl-color-bg-nav), transparent 60%);
  }
  .pager-link.current {
    border-color: var(--sl-color-accent);
    background: var(--sl-color-accent-low);
    color: var(--sl-color-accent-high);
    font-weight: 700;
  }
  .pager-link.disabled {
    opacity: 0.5;
    pointer-events: none;
  }
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>
