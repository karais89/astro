            </div>
        </div>
    </div>

    <style>
        .modern-hero {
            position: relative;
            padding: 2rem 1rem; /* Reduced padding from 4rem */
            overflow: hidden;
            background: radial-gradient(
                ellipse at top,
                var(--sl-color-bg),
                var(--sl-color-bg-step-1)
            );
            min-height: 60vh; /* Reduced from 90vh to reduce vertical whitespace */
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .bg-gradient-shapes {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            overflow: hidden;
            z-index: 0;
            pointer-events: none;
        }

        .shape {
            position: absolute;
            border-radius: 50%;
            filter: blur(80px);
            opacity: 0.3; /* Adjusted for better visibility in both modes */
            animation: float-shape 20s infinite alternate ease-in-out;
        }

        :root[data-theme="light"] .shape {
            opacity: 0.15;
        }

        .shape-1 {
            top: -10%;
            left: -10%;
            width: 70vw;
            height: 70vw;
            background: radial-gradient(circle, #4f46e5, transparent);
            animation-duration: 25s;
        }
        .shape-2 {
            bottom: -10%;
            right: -10%;
            width: 60vw;
            height: 60vw;
            background: radial-gradient(circle, #06b6d4, transparent);
            animation-delay: -5s;
            animation-duration: 30s;
        }
        .shape-3 {
            top: 40%;
            left: 40%;
            width: 50vw;
            height: 50vw;
            background: radial-gradient(circle, #8b5cf6, transparent);
            animation-delay: -10s;
            animation-duration: 22s;
        }

        @keyframes float-shape {
            0% {
                transform: translate(0, 0) scale(1);
            }
            100% {
                transform: translate(10%, 10%) scale(1.1);
            }
        }

        .content-wrapper {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 1200px;
            display: grid;
            gap: 2rem;
            align-items: center;
        }

        @media (min-width: 900px) {
            .content-wrapper {
                grid-template-columns: 1fr 1fr;
            }
        }

        .text-content {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .badge-pill {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.25rem 0.75rem;
            background: color-mix(
                in srgb,
                var(--sl-color-accent-low),
                transparent 90%
            );
            border: 1px solid var(--sl-color-gray-5);
            border-radius: 999px;
            font-size: 0.8rem;
            color: var(--sl-color-gray-2);
            margin-bottom: 1.5rem;
            backdrop-filter: blur(10px);
        }
        .dot {
            width: 6px;
            height: 6px;
            background: #06b6d4;
            border-radius: 50%;
            box-shadow: 0 0 10px #06b6d4;
            animation: pulse 2s infinite;
        }

        .title {
            font-size: clamp(2rem, 8vw, 4rem); /* Improved mobile font size */
            font-weight: 800;
            line-height: 1.15; /* Slightly increased line height */
            margin: 0 0 1.5rem;
            color: var(--sl-color-white);
            letter-spacing: -0.02em;
            word-break: keep-all;
        }

        .text-gradient {
            background: linear-gradient(135deg, #06b6d4, #8b5cf6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .subtitle {
            font-size: 1.1rem;
            line-height: 1.6;
            color: var(--sl-color-gray-2);
            margin-bottom: 2.5rem;
            max-width: 50ch;
        }

        .actions {
            display: flex;
            gap: 1rem;
        }

        .btn {
            padding: 0.8rem 1.6rem;
            border-radius: 0.75rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .btn-glow {
            background: var(--sl-color-accent-high);
            color: var(--sl-color-text-invert);
            box-shadow: 0 0 20px
                color-mix(in srgb, var(--sl-color-accent), transparent 80%);
        }
        .btn-glow:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 30px
                color-mix(in srgb, var(--sl-color-accent), transparent 60%);
            background: var(--sl-color-accent);
        }

        .btn-glass {
            background: color-mix(
                in srgb,
                var(--sl-color-gray-6),
                transparent 50%
            );
            border: 1px solid var(--sl-color-gray-5);
            color: var(--sl-color-text);
            backdrop-filter: blur(10px);
        }
        .btn-glass:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
        }

        .visual-content {
            position: relative;
            height: auto; /* Changed from 400px fixed to auto */
            min-height: 320px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 0;
        }

        .glass-card {
            background: color-mix(
                in srgb,
                var(--sl-color-bg-nav),
                transparent 40%
            );
            border: 1px solid var(--sl-color-gray-5);
            border-radius: 1.5rem;
            backdrop-filter: blur(16px);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.2);
        }

        .main-card {
            width: 100%;
            max-width: 400px;
            padding: 1px;
            position: relative;
            z-index: 2;
            animation: float-main 6s ease-in-out infinite;
            overflow: hidden;
        }

        .card-glow {
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: conic-gradient(
                from 0deg,
                transparent 0deg,
                color-mix(in srgb, var(--sl-color-accent), transparent 90%)
                    90deg,
                transparent 180deg
            );
            animation: rotate-glow 10s linear infinite;
        }

        .card-content {
            background: color-mix(in srgb, var(--sl-color-bg), transparent 20%);
            border-radius: 1.5rem;
            padding: 1.5rem;
            position: relative;
            height: 100%;
            z-index: 1;
        }

        .profile-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .avatar-circle {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            background: linear-gradient(
                135deg,
                var(--sl-color-accent),
                var(--accent-secondary, #8b5cf6)
            );
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden; /* Added to clip the image */
            border: 2px solid
                color-mix(in srgb, var(--sl-color-accent), transparent 50%);
        }

        .avatar-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .profile-info {
            display: flex;
            flex-direction: column;
        }
        .name {
            font-weight: 600;
            color: var(--sl-color-text);
        }
        .post {
            font-size: 0.8rem;
            color: var(--sl-color-gray-3);
        }

        .tech-stack {
            display: flex;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
        }

        .tech-item {
            width: 36px;
            height: 36px;
            border-radius: 10px;
            background: color-mix(
                in srgb,
                var(--sl-color-gray-6),
                transparent 80%
            );
            border: 1px solid var(--sl-color-gray-5);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.7rem;
            color: var(--sl-color-gray-2);
        }

        .code-snippet {
            background: color-mix(
                in srgb,
                var(--sl-color-bg-step-1),
                transparent 50%
            );
            padding: 1rem;
            border-radius: 0.75rem;
            font-family: "Menlo", "Monaco", "Courier New", monospace;
            font-size: 0.8rem;
            line-height: 1.5;
            color: var(--sl-color-text);
        }
        .indent {
            margin-left: 1rem;
        }
        .double-indent {
            margin-left: 2rem;
        }
        .kwd {
            color: #c4b5fd;
        }
        .cls {
            color: #67e8f9;
        }
        .mthd {
            color: #fcd34d;
        }
        .str {
            color: #86efac;
        }

        .float-card {
            position: absolute;
            padding: 0.75rem 1.25rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            z-index: 3;
        }

        .card-1 {
            top: 15%;
            right: -5%;
            animation: float-1 5s ease-in-out infinite;
        }
        .card-2 {
            bottom: 15%;
            left: -5%;
            animation: float-2 7s ease-in-out infinite;
        }

        .float-icon {
            font-size: 1.2rem;
        }
        .float-text {
            font-weight: 600;
            color: var(--sl-color-text);
            font-size: 0.9rem;
        }

        @keyframes pulse {
            0%,
            100% {
                opacity: 1;
            }
            50% {
                opacity: 0.5;
            }
        }

        @keyframes rotate-glow {
            from {
                transform: rotate(0deg);
            }
            to {
                transform: rotate(360deg);
            }
        }

        @keyframes float-main {
            0%,
            100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-10px);
            }
        }
        @keyframes float-1 {
            0%,
            100% {
                transform: translate(0, 0);
            }
            50% {
                transform: translate(-10px, -10px);
            }
        }
        @keyframes float-2 {
            0%,
            100% {
                transform: translate(0, 0);
            }
            50% {
                transform: translate(10px, -5px);
            }
        }
        /* Mobile Responsive Adjustments */
        @media (max-width: 768px) {
            .modern-hero {
                padding-top: 5rem;
                padding-bottom: 3rem;
            }

            .text-content {
                align-items: center;
                text-align: center;
                margin-bottom: 2rem;
            }

            .badge-pill {
                margin-bottom: 1rem;
            }

            .subtitle {
                margin-bottom: 2rem;
            }

            .actions {
                width: 100%;
                justify-content: center;
            }

            .visual-content {
                min-height: unset;
                overflow: visible;
                padding-top: 1rem;
            }

            .main-card {
                transform: scale(0.9);
                margin: 0 auto;
            }

            /* Hide floating cards on mobile to avoid overlap and clutter */
            .float-card {
                display: none;
            }
        }
    </style>
</section>
